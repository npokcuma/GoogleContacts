<Window x:Class="ipogonyshevNetTest.View.LableWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:viewModel="clr-namespace:ipogonyshevNetTest.ViewModel"
		Title="Create new lable"
		Width="400"
		Height="150"
		d:DataContext="{d:DesignInstance Type=viewModel:LableViewModel,
										 IsDesignTimeCreatable=True}"
		ResizeMode="NoResize"
		mc:Ignorable="d">
	<Grid Margin="0,7,0,23">
		<StackPanel>
			<TextBox Height="25"
					 Margin="0,20,0,10"
					 HorizontalAlignment="Stretch"
					 VerticalAlignment="Stretch"
					 Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
					 TextWrapping="Wrap" />
			<StackPanel Orientation="Horizontal">

				<Button Click="Save_OnClick"
						Content="Save" />
				<Button Click="Cancel_OnClick"
						Content="Cancel" />
			</StackPanel>
		</StackPanel>
	</Grid>
</Window>
